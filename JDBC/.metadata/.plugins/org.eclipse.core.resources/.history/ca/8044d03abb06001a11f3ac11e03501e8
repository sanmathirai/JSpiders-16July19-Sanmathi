package com.ustglobal.webapp.servlets.database;

import java.io.IOException;
import java.io.PrintWriter;
import java.sql.Connection;
import java.sql.DriverManager;
import java.sql.PreparedStatement;
import java.sql.ResultSet;


import javax.servlet.ServletException;
import javax.servlet.http.HttpServlet;
import javax.servlet.http.HttpServletRequest;
import javax.servlet.http.HttpServletResponse;




public class DisplayEmployeeServelet extends HttpServlet{
	@Override
	protected void doPost(HttpServletRequest req, HttpServletResponse resp) throws ServletException, IOException {

		String empId = req.getParameter("empid");
		PrintWriter out = resp.getWriter();
		int id1 = 0;
		String name;
		int sal;
		String gender;
		out.println(empId);
		String url = "jdbc:mysql://localhost:3306/ust_ty_db?user=root&password=1234";
		String sql = "select * from employee_info where id=?";
		Connection conn = null;
		PreparedStatement pstmt = null;
		ResultSet rs = null;

		try{
			Class.forName("com.mysql.jdbc.Driver");
			conn = DriverManager.getConnection(url);

			pstmt = conn.prepareStatement(sql);
			int eid = Integer.parseInt(empId);
			pstmt.setInt(1, eid);
			rs = pstmt.executeQuery();

			if(rs.next()) {	 
				id1 = rs.getInt("id");
				name = rs.getString("name");
				sal = rs.getInt("sal");
				gender = rs.getString("gender");
				
		
				
				
				
				out.println("<h1>"+id1);
				out.println(name);
				out.println(sal);
				out.println(gender);
				out.println("********************");
			}

		}catch(Exception e){
			e.printStackTrace();

		}finally {
			try {
				if(conn!=null) {
					conn.close();
				}
				if(pstmt!=null) {
					pstmt.close();
				}
				if(rs!=null) {
					rs.close();
				}
			}catch (Exception e) {
				e.printStackTrace();
			}
		}
		
		out.println("<html>");
		out.println("<body>");
		out.println("<table>");
		
		out.println("<tr>");
		
		out.println("<th>EMP </th>");
		out.println("<th>EMP Name</th>");
		out.println("<th>EMP Sal </th>");
		out.println("<th>EMP GEnder</th>");
		
		
		out.println("</tr>");
		
		out.println("<tr>");
		
		out.println("<h1>");
		out.print(id1);
		out.println("<td>");
		out.println("<td>EMP </td>");
		out.println("<td>EMP </td>");
		out.println("<td>EMP </td>");
		
		
		out.println("</tr>");
		
		out.println("</table>");
		out.println("</body>");
		out.println("</html>");
	}
}
